 <h1><%= @tale.title %></h1>
 
 <div class="row">
   <div class="col-md-8">
     <p><%= @tale.body %></p>
   </div>
   <div class="col-md-4">
     <%= link_to "Edit", edit_tale_path(@tale), class: 'btn btn-success' %>
     <%= link_to "Delete Story", @tale, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete your story?'} %>
   </div>
 </div>