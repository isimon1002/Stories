 <div class="media">
   <div class="media-body">
     <small>
       <%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago
       <% if current_user != nil %>
         <% if current_user.admin? || current_user == comment.user %>
            <%= link_to "Delete", [@tale, comment], method: :delete %>
         <% end %>
       <% end %>
     </small>
     <p><%= comment.body %></p>
   </div>
 </div>